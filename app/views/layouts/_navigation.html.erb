<%# navigation styled for Zurb Foundation 5 %>
<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name"><%= link_to 'Ipsilon App', root_path %></li>
    <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
  </ul>
  <div class="top-bar-section">
    <ul>
      <%= render 'layouts/navigation_links' %>
    </ul>
    <ul class="right">
      <% if user_signed_in? %>
          <li><%= link_to current_user.email, edit_user_registration_path, method: :get %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      <% else %>
          <li><%= link_to "Sign in", new_user_session_path, method: :get %></li>
      <% end %>
    </ul>
  </div>
</nav>
